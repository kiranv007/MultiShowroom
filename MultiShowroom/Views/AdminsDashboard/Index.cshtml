
@{
    ViewBag.Title = "Index";
}

@*<h2>Index</h2>*@
<body>
    <h1>Admin dashboard</h1>
    <section>
        <div class="container login d-flex justify-content-around">
            <div class="card" style="width: 18rem ;height:25rem;">
                <img src="~/Images/dashboard/admindash.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h4 class="card-title ">Admin Login</h4>
                    <h3 class="card-text ">Warning Alert</h3>

                    @*<a href="" class="btn btn-primary">Click!</a>*@
                    <button type="submit">@Html.ActionLink("Login", "Index", "Admins")</button>
                </div>
            </div>

            <div class="card" style="width: 18rem; height:25rem;">
                <img src="~/Images/dashboard/bookingdash.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h4 class="card-title ">Bookings</h4>
                    <h3 class="card-text ">details</h3>

                    @*<a href="" class="btn btn-primary">Click!</a>*@
                    <button type="submit"> @Html.ActionLink("BookingDetails", "Index", "Bookings") </button>
                </div>
            </div>

            <div class="card" style="width: 18rem; height :25rem;">
                <img src="~/Images/dashboard/branchdash.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h4 class="card-title ">Branch</h4>
                    <h3 class="card-text ">Details</h3>

                    @*<a href="" class="btn btn-primary">Click!</a>*@
                    <button type="submit"> @Html.ActionLink("BranchDetails", "Index", "BranchDetails") </button>
                </div>
            </div>




            <div class="card" style="width: 18rem; height :25rem;">
                <img src="~/Images/banner/banner4.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h4 class="card-title ">Car</h4>
                    <h3 class="card-text ">Deatils</h3>

                    @*<a href="" class="btn btn-primary">Click!</a>*@
                    <button type="submit"> @Html.ActionLink("CarDetails", "Index", "CarDetails") </button>
                </div>
            </div>


            <div class="card" style="width: 18rem; height :25rem;">
                <img src="~/Images/dashboard/schemesdash.jpg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h4 class="card-title ">Schemes</h4>
                    <h3 class="card-text ">Details</h3>

                    @*<a href="" class="btn btn-primary">Click!</a>*@
