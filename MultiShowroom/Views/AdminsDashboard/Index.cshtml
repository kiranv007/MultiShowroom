            </div>


            <div class="card" style="width: 18rem; height :25rem;">
                <img src="~/Images/adminlogo1.jpeg" class="card-img-top" alt="...">
                <div class="card-body">
                    <h4 class="card-title">Customers</h4>
                    <h3 class="card-text ">Details</h3>

                    @*<a href="" class="btn btn-primary">Click!</a>*@
                    <button type="submit"> @Html.ActionLink("CustomerDetails", "Index", "CustomerDetails") </button>
                </div>
            </div>

        </div>
    </section>



    <div>
        <button type="submit"> @Html.ActionLink("Back", "Index", "Home") </button>
    </div>

</body>

<style>
    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-size: cover;
        background-image: url('../../images/blackcarbg1.jpg');
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh; /* Set the height of the body to 100% of the viewport height */
    }


    .body-content {
        margin: 0;
        padding: 0;
    }
</style>
