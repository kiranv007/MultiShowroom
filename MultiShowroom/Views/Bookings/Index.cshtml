@model IEnumerable<MultiShowroom.Models.Booking>

@{
    ViewBag.Title = "Index";
}
<body>
    <h2>Bookings</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BookingID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchemeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BookingAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UPI_ID)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.CarDetail.CarName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CustomerDetail.FirstName)
                </th>*@
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SchemeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BookingAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UPI_ID)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.CarDetail.CarName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerDetail.FirstName)
                    </td>*@
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.BookingID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.BookingID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.BookingID })
                </td>
            </tr>
        }

    </table>
    <div>
        <button type="submit"> @Html.ActionLink("Back", "Index", "AdminsDashboard") </button>
    </div>


</body>
<style>
    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-size: cover;
        background-image: url('../../images/whitebg1.jpg');
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh; /* Set the height of the body to 100% of the viewport height */
    }


    .body-content {
        margin: 0;
        padding: 0;
    }
</style>