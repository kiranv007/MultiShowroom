@model IEnumerable<MultiShowroom.Models.CarDetail>

@{
    ViewBag.Title = "Index";
}
<body>
    <h2>CarDetails</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CarID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CarPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BranchDetail.BranchName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CarID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CarPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BranchDetail.BranchName)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.CarID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.CarID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.CarID })
                </td>
            </tr>
        }

    </table>
    <div>
        <button type="submit"> @Html.ActionLink("Back", "Index", "AdminsDashboard") </button>
    </div>

</body>
<style>
    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-size: cover;
        background-image: url('../../images/blackcarbg1.jpg');
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh; /* Set the height of the body to 100% of the viewport height */
    }


    .body-content {
        margin: 0;
        padding: 0;
    }
</style>