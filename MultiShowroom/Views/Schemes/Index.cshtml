@model IEnumerable<MultiShowroom.Models.Scheme>

@{
    ViewBag.Title = "Index";
}
<body>

    <h2>Schemes of Cars recently launched..</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SchemeID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SchemeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.SchemeID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SchemeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.SchemeID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.SchemeID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.SchemeID })
                </td>
            </tr>
        }

    </table>
    <div>
        <button type="submit"> @Html.ActionLink("Back", "Index", "AdminsDashboard") </button>
    </div>


</body>
<style>
    body {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
        background-size: cover;
        background-image: url('../../images/blackcarbg1.jpg');
        background-position: center;
        background-repeat: no-repeat;
        height: 100vh; /* Set the height of the body to 100% of the viewport height */
    }


    .body-content {
        margin: 0;
        padding: 0;
    }
</style>